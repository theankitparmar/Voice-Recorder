<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#1A1A1A"
    tools:context=".ui.DemoActivity">

    <!-- Status Text -->
    <TextView
        android:id="@+id/tvStatus"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Ready to Record"
        android:textSize="20sp"
        android:textStyle="bold"
        android:textColor="#FFFFFF"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="32dp"/>

    <!-- Waveform Container Card -->
    <com.google.android.material.card.MaterialCardView
        android:id="@+id/cardWaveform"
        android:layout_width="0dp"
        android:layout_height="@dimen/_200sdp"
        android:layout_marginTop="24dp"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        app:cardBackgroundColor="#2A2A2A"
        app:cardCornerRadius="16dp"
        app:cardElevation="8dp"
        app:layout_constraintTop_toBottomOf="@id/tvStatus"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <!-- Waveform View -->
        <com.quick.voice.recorder.ui.WaveformView2
            android:id="@+id/waveformView"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#2A2A2A"
            app:chunkWidth="3dp"
            app:chunkSpace="2dp"
            app:chunkMinHeight="@dimen/_6sdp"
            app:chunkRoundedCorners="true"
            app:chunkColor="@color/colorPrimaryDark"
            app:chunkAlignTo="center"/>

    </com.google.android.material.card.MaterialCardView>

    <!-- Recording Time Display -->
    <TextView
        android:id="@+id/tvRecordingTime"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="00:00"
        android:textSize="32sp"
        android:textStyle="bold"
        android:textColor="#FFFFFF"
        android:fontFamily="monospace"
        app:layout_constraintBottom_toTopOf="@id/layoutControls"
        app:layout_constraintTop_toBottomOf="@id/cardWaveform"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <!-- Control Buttons Container -->
    <LinearLayout
        android:id="@+id/layoutControls"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center"
        android:layout_marginStart="24dp"
        android:layout_marginEnd="24dp"
        app:layout_constraintTop_toBottomOf="@id/tvRecordingTime"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
     >

        <!-- Start Recording Button -->
        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnStartRecording"
            android:layout_width="wrap_content"
            android:layout_height="64dp"
            android:text="Start Recording"
            android:textAllCaps="false"
            android:textSize="16sp"
            android:paddingStart="32dp"
            android:paddingEnd="32dp"
            app:icon="@drawable/ic_status_record"
            app:iconGravity="start"
            app:iconSize="24dp"
            app:cornerRadius="32dp"
            style="@style/Widget.Material3.Button.ElevatedButton"/>

        <!-- Pause/Resume Button -->
        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnPauseResume"
            android:layout_width="wrap_content"
            android:layout_height="56dp"
            android:text="Pause"
            android:textAllCaps="false"
            android:textSize="16sp"
            android:paddingStart="32dp"
            android:paddingEnd="32dp"
            android:layout_marginTop="16dp"
            android:enabled="false"
            app:icon="@drawable/ic_pause"
            app:iconGravity="start"
            app:iconSize="24dp"
            app:cornerRadius="28dp"
            style="@style/Widget.Material3.Button.OutlinedButton"/>

        <!-- Stop Button -->
        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnStop"
            android:layout_width="wrap_content"
            android:layout_height="56dp"
            android:text="Stop &amp; Save"
            android:textAllCaps="false"
            android:textSize="16sp"
            android:paddingStart="32dp"
            android:paddingEnd="32dp"
            android:layout_marginTop="16dp"
            android:enabled="false"
            app:icon="@drawable/ic_stop"
            app:iconGravity="start"
            app:iconSize="24dp"
            app:cornerRadius="28dp"
            style="@style/Widget.Material3.Button.TonalButton"/>

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>


